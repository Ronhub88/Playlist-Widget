<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    
   
<TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/readme_top"/>

<SeekBar android:id="@+id/seekbarconfig"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"/>
    
<TextView android:id="@+id/mindisplayconfig"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Never"
    android:textColor="@android:color/white"/>

<Button android:id="@+id/okconfig"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="OK" />
    
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/readme_bottom"/>    

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/analytics_warn"/>

</LinearLayout>